# ------------------------------
# Core deployment settings
# ------------------------------
TZ=UTC

# ------------------------------
# PostgreSQL settings (required)
# ------------------------------
POSTGRES_DB=readeck
POSTGRES_USER=readeck
POSTGRES_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD

# ------------------------------
# Readeck security and app settings
# ------------------------------
# Random application secret (32+ bytes recommended)
READECK_SECRET_KEY=CHANGE_ME_WITH_OPENSSL_RANDOM

# Log level: debug, info, warn, error
READECK_LOG_LEVEL=info

# Readeck bind and URL settings
READECK_SERVER_HOST=0.0.0.0
READECK_SERVER_PORT=8000
READECK_SERVER_PREFIX=
READECK_SERVER_BASE_URL=https://yourdomain.com

# Reverse-proxy trust settings
READECK_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
READECK_TRUSTED_PROXIES=127.0.0.1/32,172.16.0.0/12,10.0.0.0/8
READECK_SERVER_USE_X_FORWARDED=true

# Database source (used by Readeck container)
# Compose injects READECK_DATABASE_SOURCE dynamically from POSTGRES_* values.
# You can set static DSN manually if preferred:
# READECK_DATABASE_SOURCE=postgres://readeck:yourpassword@postgres:5432/readeck?sslmode=disable

# Optional sqlite path (only if not using postgres)
# READECK_DATABASE_PATH=/readeck/readeck.sqlite3

# ------------------------------
# Mail settings (optional, for email features)
# ------------------------------
READECK_MAIL_HOST=smtp.yourmailprovider.com
READECK_MAIL_PORT=587
READECK_MAIL_USERNAME=readeck@yourdomain.com
READECK_MAIL_PASSWORD=CHANGE_ME_SMTP_PASSWORD
READECK_MAIL_ENCRYPTION=starttls
READECK_MAIL_FROM=Readeck <readeck@yourdomain.com>
READECK_MAIL_FROMNOREPLY=noreply@yourdomain.com

# ------------------------------
# Optional app registration controls
# ------------------------------
# Common values (depending on Readeck version):
# READECK_SIGNUP_ALLOWED=false
# READECK_DISABLE_REGISTRATION=true

# ------------------------------
# Backup settings used by scripts
# ------------------------------
BACKUP_DIR=./backups
RETENTION_DAYS=14
